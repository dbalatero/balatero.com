---
layout: main
pagination:
  data: collections.writingTags
  size: 1
  alias: tag
permalink: /writings/{{ tag }}/
---

<h1>Writings about '{{ tag }}'</h1>

<ul>
  {% set writings = collections[ tag ] %}
  {% for article in writings | withTag("writings") | reverse %}
    <li>
      <span class="mono-date">{{ article.date.toLocaleDateString() }}</span>
      <a href="{{ article.url }}">{{ article.data.title }}</a>

      <div class="tag-list">
        {% for tag in article.data.tags %}
          {% if tag !== 'writings' %}
            <a class="tag-list__tag" href="/writings/{{ tag }}">{{ tag }}</a>
          {% endif %}
        {% endfor %}
      </div>
    </li>
  {% endfor %}
</ul>
