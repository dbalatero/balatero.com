---
layout: main
---
<div class="release">
  <h1>{{ title }}</h1>

  <ul class="release__information">
    <li><strong>Released</strong> {{ page.date.toDateString() }}</li>
    <li>
      {% if formats.length > 1 %}
        <strong>Formats</strong> {{ formats.join(', ') }}
      {% else %}
        <strong>Format</strong> {{ formats }}
      {% endif %}
    </li>
    <li>
      <a href="{{ external.href }}" target="_blank">{{ external.label }}</a>
    </li>
  </ul>

  {{ content | safe }}

  {% if bandcamp %}
    <iframe style="border: 0; width: 100%; height: 120px;" src="{{ bandcamp.embed_src }}" seamless>
      <a href="{{ bandcamp.link.href }}">{{ bandcamp.link.label }}</a>
    </iframe>
  {% endif %}
</div>
